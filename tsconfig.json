{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"outDir": "./dist",
		"baseUrl": "./src",
		"strict": true,
		"esModuleInterop": true,
		"noEmitOnError": true,
		"alwaysStrict": false
	},
	"include": [
		"src/main.ts",
		"src/utils.ts",
		"src/config.ts",
		"src/global.d.ts"
	], // Nur relevante .ts-Dateien hier
	"exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"] // Ausschlie√üen von Tests oder anderen irrelevanten Dateien
}
